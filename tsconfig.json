{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  }
}
